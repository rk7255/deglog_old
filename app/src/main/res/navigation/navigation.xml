<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/diaryFragment">

    <fragment
        android:id="@+id/diaryFragment"
        android:name="jp.ryuk.deglog_a01.diary.DiaryFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_diary">
        <action
            android:id="@+id/action_diaryFragment_to_addAnimalFragment"
            app:destination="@id/addAnimalFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_diaryFragment_to_diaryDetailFragment"
            app:destination="@id/diaryDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_diaryFragment_to_addProfileFragment"
            app:destination="@id/addProfileFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/addAnimalFragment"
        android:name="jp.ryuk.deglog_a01.addanimal.AddAnimalFragment"
        android:label="AddAnimalFragment"
        tools:layout="@layout/fragment_add_animal">
        <action
            android:id="@+id/action_addAnimalFragment_to_diaryFragment"
            app:destination="@id/diaryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/addAnimalFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/diaryDetailFragment"
        android:name="jp.ryuk.deglog_a01.diarydetail.DiaryDetailFragment"
        android:label="fragment_diary_detail"
        tools:layout="@layout/fragment_diary_detail" >
        <argument
            android:name="animalKey"
            app:argType="long" />
        <action
            android:id="@+id/action_diaryDetailFragment_to_diaryFragment"
            app:destination="@id/diaryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/diaryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addProfileFragment"
        tools:layout="@layout/fragment_add_profile"
        android:name="jp.ryuk.deglog_a01.addprofile.AddProfileFragment"
        android:label="AddProfileFragment" >
        <action
            android:id="@+id/action_addProfileFragment_to_diaryFragment"
            app:destination="@id/diaryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/diaryFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>